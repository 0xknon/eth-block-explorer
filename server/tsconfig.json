{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "coverage/",
    ".../node_modules/",
    "jest.config.js",
    "commitlint.config.js",
    "setupTests.ts",
    "build/",
    "dist/"
  ]
}
